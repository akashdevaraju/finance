.panel.panel-default
  .panel-heading
    %h3.panel-title= t(:income, count: 2)
  .panel-body
    %table.table.table-highlight
      %tr
        %th= t(:name)
        %th= t(:type)
        %th= t(:amount)
        %th
      %tr{ 'ng-repeat' => 'income in incomes' }
        %td {{income.name}}
        %td {{income.type_name}}
        %td {{income.amount}}
        %td
          .close{ 'ng-click' => 'destroyIncome(income.id)' } &times;
      %tr
        %td
        %td= t(:total)
        %td.bold {{totalIncome()}}
        %td
%form.form-inline{ 'ng-submit' => 'createIncome()' }
  .form-group
    = text_field_tag nil, nil, placeholder: t(:name), class: 'form-control', 'ng-model' => 'newIncome.name'
  .form-group
    = number_field_tag nil, nil, min: 0, placeholder: t(:amount), class: 'form-control', 'ng-model' => 'newIncome.amount'
  .form-group
    = select_tag nil, options_from_collection_for_select(@income_types, 'id', 'name'), class: 'form-control', 'ng-model' => 'newIncome.entry_type_id', required: true
  = submit_tag t(:add), class: 'btn btn-default'
