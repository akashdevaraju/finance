%form.form-inline
  .form-group
    = text_field_tag nil, nil, placeholder: t(:add_income), class: 'form-control'
  .form-group
    = number_field_tag nil, nil, min: 0, placeholder: t(:amount), class: 'form-control'
  .form-group
    = select_tag nil, options_from_collection_for_select(@types[:incomes], 'id', 'name'), class: 'form-control', required: true
  = submit_tag t(:add), class: 'btn btn-default'
.height-20
.panel.panel-default
  .panel-heading
    %h3.panel-title= t(:income, count: 2)
  .panel-body
    %table.table.table-normal
      %tr
        %th= t(:name)
        %th.hidden-xs= t(:type)
        %th= t(:amount)
        %th= t(:datetime)
        %th.hidden-xs
      - @entries[:incomes].each do |income|
        %tr
          %td= income.name
          %td.hidden-xs= income.type_name
          %td= income.amount
          %td= l(income.created_at)
          %td.hidden-xs
            .close &times;
      %tr
        %td.hidden-xs
        %td= t(:total)
        %td.bold= @entries[:total_incomes]
        %td
        %td.hidden-xs
